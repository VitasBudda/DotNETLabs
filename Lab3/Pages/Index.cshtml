@page
@model IndexModel
@{
    ViewData["Title"] = "Головна сторінка";
}

<div class="text-center">
    <img src="logo.png" title="core" alt="" />
    
    <h5 class="display-4">Operations</h5>
    <table class="table">
        <thead>
        <tr><th>Date</th><th>Sum</th><th>Type</th><th>Last Name</th><th>First Name</th><th>Surname</th></tr>
        </thead>
        <tbody>
        @foreach (var operation in Model.Operations)
        {
            <tr><td>@operation.Date</td><td>@operation.Sum</td><td>@operation.Type.Name</td>
                <td>@operation.Person.LastName</td><td>@operation.Person.FirstName</td>
                <td>@operation.Person.Surname</td></tr>  
        }
        </tbody>
    </table>
    
    <h5 class="display-4">Visits</h5>
        <table class="table">
            <thead>
            <tr><th>Last Name</th><th>First Name</th><th>Surname</th><th>Number of Visits</th></tr>
            </thead>
            <tbody>
            @foreach (var visit in Model.Visits.GroupBy(p => p.Person))
            {
                <tr><td>@visit.Key.LastName</td><td>@visit.Key.FirstName</td>
                    <td>@visit.Key.Surname</td><td>@visit.Count()</td></tr>  
            }
            </tbody>
        </table>

    <h5 class="display-4">Persons</h5>
    <table class="table">
        <thead>
            <tr><th>Last Name</th><th>First Name</th><th>Surname</th><th>City</th><th>Street</th>
            <th>House</th><th>Apartament</th><th>Passport Seria</th><th>Passport Number</th></tr>
        </thead>
        <tbody>
            @foreach (var person in Model.Persons)
            {
                <tr><td>@person.LastName</td><td>@person.FirstName</td><td>@person.Surname</td>
                    <td>@person.Address.City</td><td>@person.Address.Street</td>
                    <td>@person.Address.HouseNumber</td><td>@person.Address.ApartmentNumber</td>
                    <td>@person.Passport.Seria</td><td>@person.Passport.Number</td></tr>  
            }
        </tbody>
        </table>
</div>