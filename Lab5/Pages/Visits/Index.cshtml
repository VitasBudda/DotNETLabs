@page
@model IndexModel
@{
    ViewData["Title"] = "Visits";
}

<div class="text-center">
    <h5 class="display-4">Visits</h5>
    <p class="text-left">
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Sum</th>
                <th>Type</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Surname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visit in Model.Visits)
            {
                <tr>
                    <td>@visit.Date</td>
                    <td>@visit.Sum</td>
                    <td>@visit.Type.Name</td>
                    <td>@visit.Person.LastName</td>
                    <td>@visit.Person.FirstName</td>
                    <td>@visit.Person.Surname</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@visit.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@visit.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>